/* pages/sc/sc.wxss */
.search-container {
    background-color: #4B4B4B;
  }
  
  .search {
    position: relative;
    width: 100vw;
    height: 50rpx;
    display: flex;
    box-sizing: border-box;
    padding-left: 26rpx;
    background-color: #4B4B4B;
  }
  
  .search input {
    display: block;
    box-sizing: border-box;
    background: #646464;
    height: 62rpx;
    border-radius: 20rpx;
    padding-left: 20rpx;
    line-height: 62rpx;
    font-size: 12px;
  }
  
  .search-title {
    left: 0;
    font-weight: bold;
    font-size: 16px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .search-placeholder {
    font-size: 14px;
    color: #A9A6A6;
    line-height: 62rpx;
  }

  .banner{
    height:350rpx; 
    width:100%;
    display: flex;
    display: -webkit-box;
    flex-direction: column;
} 
.banner_Item{ 
   width: 180rpx;
   height: 350rpx;
   margin-right:40rpx;
   align-content: center;
} 
.banner_Item_image{
    display: flex;
    align-content: center;
    width: 180rpx;
    height: 200rpx;
}
.banner_Item_name{
    margin: auto;
    width: 160rpx;
    height: 90rpx;
    font-size: 10px;
    vertical-align: middle;
}
.banner_Item_price{
    width:180rpx;
    text-align: center;
    vertical-align: middle;
    height: 60rpx;
    font-size: 15px;
    color: crimson;
}